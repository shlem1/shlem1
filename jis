#include"stdio.h"
#include"string.h"
#include"stdlib.h"

int isoperator(char c)
{
	if(c=='+'||c=='*'||c=='/') return 1;
	else return 0;
}  

void moveoperator(char *p)
{
	while(*p!='\0')
	{
		*p=*(p+1);
	   	p++;
	}
}

void moveoperand();
